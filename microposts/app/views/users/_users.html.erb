<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <il class="media">
        <img class="mr2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to "View profile", user_path(user) %></p>
          </div>
        </div>
      </il>
    <% end %>  
  </ul>
  <%= paginate users %>
<% end %>  